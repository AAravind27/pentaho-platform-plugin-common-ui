<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>gwt-assembly</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${gwt.outputDirectory}/Themes/themes</directory>
      <outputDirectory>/resources/themes</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${gwt.outputDirectory}/formatter</directory>
      <outputDirectory>/resources/web/formatter</outputDirectory>
    </fileSet>

  </fileSets>

</assembly>