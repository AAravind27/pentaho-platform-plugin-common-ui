<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>common-ui-platform-plugin-assembly</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <!--
  <fileSets>
    <fileSet>
      <directory>${gwt.outputDirectory}/Themes/themes</directory>
      <outputDirectory>/resources/themes</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${gwt.outputDirectory}/formatter</directory>
      <outputDirectory>/resources/web/formatter</outputDirectory>
    </fileSet>

  </fileSets>
-->

  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/resources</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${webjars.target.directory}/jquery/${jquery.version}/dist</directory>
      <outputDirectory>resources/web/jquery</outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>${webjars.target.directory}/jquery-i18n-properties/${jquery-i18n-properties.version}/jquery.i18n.properties-min.js</source>
      <outputDirectory>resources/web/jquery</outputDirectory>
    </file>
  </files>

  <dependencySets>

    <!-- GWT -->
    <dependencySet>
      <includes>
        <include>
          org.pentaho:pentaho-platform-plugin-common-ui-impl-gwt:zip
        </include>
      </includes>
      <unpack>true</unpack>
    </dependencySet>

    <!-- Server side dependencies with transitives -->
    <dependencySet>
      <includes>
        <include>
          *:*:jar*
        </include>
      </includes>
      <excludes>
        <exclude>
          org.webjars.*:*:jar*
        </exclude>
      </excludes>
      <outputDirectory>/lib</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
    </dependencySet>

  </dependencySets>

</assembly>